   "metadata": {},
   "outputs": [],
   "source": [
    "N = 100000000\n",
    "rng = np.random.default_rng()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 62,
   "id": "cf269b37-54d0-490a-a1b2-19ea82433401",
   "metadata": {},
   "outputs": [
